@page
@model CourseProjectLiteMK5.Pages.SubmitModel
@{
    ViewData["Title"] = "Create Post";
}

<div class="container py-3 d-flex flex-column">
    <h3>Create a post</h3>
    <partial name="_StatusMessage" for="StatusMessage" />
    <div class="pt-3 border-top">
        <div class="d-flex flex-column gap-3">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger list-unstyled" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Title" class="form-control" autocomplete="off" aria-required="true" placeholder="Title" maxlength="64" />
                    <label asp-for="Input.Title" class="form-label">Title</label>
                    <span asp-validation-for="Input.Title" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <textarea asp-for="Input.Content" class="form-control" id="content" rows="10" placeholder="Content" aria-required="true" maxlength="8192"></textarea>
                    <span asp-validation-for="Input.Content" class="text-danger"></span>
                </div>
                <div class="justify-content-end d-flex border-top pb-3">
                    <button type="submit" class="d-none d-lg-inline-block mt-3 btn btn-outline-primary">Post</button>
                    <button type="submit" class="d-lg-none w-100 mt-3 mx-auto btn-lg btn-outline-primary">Post</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}