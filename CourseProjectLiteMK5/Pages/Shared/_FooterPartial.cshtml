@{
    string brandCssClasses = "mt-lg-3 col-lg d-lg-flex justify-content-lg-center align-self-lg-start";
    string navCssClasses = "mt-lg-3 col-lg d-lg-flex justify-content-lg-center align-self-lg-start";
    string scrollButtonCssClasses = "mt-lg-3 col-lg d-lg-flex justify-content-lg-center align-self-lg-start";
    string statsCssClasses = "mt-lg-3 col-lg d-lg-flex flex-lg-column justify-content-lg-center align-self-lg-start";
    string socialMediaCssClasses = "mt-lg-3 gap-lg-3 col-lg d-lg-flex flex-lg-column justify-content-lg-center align-items-lg-center";
}


<div class="p-lg-4 row align-items-lg-center">
    <div class="@brandCssClasses">
        <a asp-area="" asp-page="/Home"><img src="media/flashback_2.0_logo_light.png" alt="Flashback 2.0 Logo" class="img-fluid"></a>
    </div>

    <div class="@navCssClasses">
        <ul class="nav">
            <li class="nav-item">
                <h1 class="text-center">Links</h1>
                <a is-active-page asp-area="" asp-page="/Home" class="nav-link text-light fs-4">Home</a>
                <a href="" class="nav-link disabled fs-4">Discover</a>
                <a href="" class="nav-link disabled fs-4">Community</a>
                <a href="" class="nav-link disabled fs-4">About</a>
                <a href="" class="nav-link disabled fs-4">Rules</a>
                <a is-active-page asp-area="" asp-page="/Privacy" class="nav-link text-light fs-4">Privacy</a>
            </li>
        </ul>
    </div>

    <div class="@scrollButtonCssClasses">
        <button type="button" class="btn btn-light btn-lg rounded-circle scrl-btn" id="btn-back-to-top"><i class="fa-solid fa-angle-up"></i></button>
    </div>

    <div class="@statsCssClasses">
        <h1 class="text-center">Statistics</h1>
        <p class="text-start fs-4">Users Online <span class="fw-bold">17</span></p>
        <p class="text-start fs-4">Registered Members <span class="fw-bold">59</span></p>
        <p class="text-start fs-4">Threads <span class="fw-bold">139</span></p>
    </div>

    <div class="@socialMediaCssClasses gap-lg-3 flex-lg-column align-items-lg-center">
        <a href="#" class="nav-link p-0 disabled fs-4"><i class="fa-brands fa-instagram"></i></a>
        <a href="#" class="nav-link p-0 disabled fs-4"><i class="fa-brands fa-tiktok"></i></a>
        <a href="#" class="nav-link p-0 disabled fs-4"><i class="fa-brands fa-snapchat"></i></a>
        <a href="#" class="nav-link p-0 disabled fs-4"><i class="fa-brands fa-facebook"></i></a>
    </div>
</div>

<div class="p-1 text-center border-top border-secondary">
    <p class="m-3 text-secondary">Copyright &copy; 2023 Kim Wigenfeldt</p>
</div>