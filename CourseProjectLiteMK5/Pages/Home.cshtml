@page
@using CourseProjectLiteMK5.Components;
@model CourseProjectLiteMK5.Pages.HomeModel
@{
    ViewData["Title"] = "Home";
}

<div class="py-2" style="background-color: #f5f5f5;">
    <div class="row width mx-auto my-3">
        <div class="col-12 p-0">
            <div>
                <h1 class="d-none d-xl-block"><i class="fa-solid fa-fire" style="color: firebrick;"></i> Trending today</h1>
                <h3 class="d-xl-none text-center text-lg-start"><i class="fa-solid fa-fire" style="color: firebrick;"></i> Trending today</h3>
            </div>
            <div class="d-flex gap-3 justify-content-center">
                <div class="card w-75 opacity-75 overflow-hidden d-sm-none">
                    <img src="~/media/S7_E9.png" class="card-img" alt="S7_E9" />
                    <div class="card-img-overlay d-flex bg-black bg-opacity-25">
                        <div class="mt-auto">
                            <h1 class="card-title text-secondary fs-5 m-0 p-0">Old Friends Not Forgotten</h1>
                            <p class="card-text text-secondary fs-6 m-0 p-0">The siege of Mandalore begins</p>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Star Wars</p>
                        </div>
                    </div>
                </div>
                <div class="card w-50 opacity-75 overflow-hidden d-none d-sm-flex d-lg-none">
                    <img src="~/media/S7_E9.png" class="card-img" alt="S7_E9" />
                    <div class="card-img-overlay d-flex bg-black bg-opacity-25">
                        <div class="mt-auto">
                            <h1 class="card-title text-secondary fs-5 m-0 p-0">Old Friends Not Forgotten</h1>
                            <p class="card-text text-secondary fs-6 m-0 p-0">The siege of Mandalore begins</p>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Star Wars</p>
                        </div>
                    </div>
                </div>
                <div class="card w-25 opacity-75 overflow-hidden d-none d-lg-flex">
                    <img src="~/media/S7_E9.png" class="card-img" alt="S7_E9" />
                    <div class="card-img-overlay d-flex bg-black bg-opacity-25">
                        <div class="mt-auto">
                            <h1 class="card-title text-secondary fs-5 m-0 p-0">Old Friends Not Forgotten</h1>
                            <p class="card-text text-secondary fs-6 m-0 p-0">The siege of Mandalore begins</p>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Star Wars</p>
                        </div>
                    </div>
                </div>
                <div class="card w-25 opacity-75 d-none d-lg-flex overflow-hidden">
                    <img src="~/media/S7_E10.png" class="card-img" alt="S7_E10" />
                    <div class="card-img-overlay d-flex bg-black bg-opacity-25">
                        <div class="mt-auto">
                            <h1 class="card-title text-secondary fs-5 m-0 p-0">The Phantom Apprentice</h1>
                            <p class="card-text text-secondary fs-6 m-0 p-0">The battle for Mandalore continues, Ahsoka faces Maul</p>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Star Wars</p>
                        </div>
                    </div>
                </div>
                <div class="card w-25 opacity-75 d-none d-xl-flex overflow-hidden">
                    <img src="~/media/S7_E11.png" class="card-img" alt="S7_E11" />
                    <div class="card-img-overlay d-flex bg-black bg-opacity-25">
                        <div class="mt-auto">
                            <h1 class="card-title text-secondary fs-5 m-0 p-0">Shattered</h1>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Maul is captured and the Siege of Mandalore is won</p>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Star Wars</p>
                        </div>
                    </div>
                </div>
                <div class="card w-25 opacity-75 d-none d-xxl-flex overflow-hidden">
                    <img src="~/media/S7_E12.png" class="card-img" alt="S7_E12" />
                    <div class="card-img-overlay d-flex bg-black bg-opacity-25">
                        <div class="mt-auto">
                            <h1 class="card-title text-secondary fs-5 m-0 p-0">Victory and Death</h1>
                            <p class="card-text text-secondary fs-6 m-0 p-0">In the wake of Order 66, Ahsoka and Rex must work together to survive</p>
                            <p class="card-text text-secondary fs-6 m-0 p-0">Star Wars</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row width mx-auto my-3">
        <div class="col-12 p-0">
            <div class="d-flex align-items-center p-2 p-xxl-4 flex-column flex-lg-row justify-content-center">
                <h1 class="d-none d-xl-block">
                    <i class="fa-regular fa-comments text-white" style="font-size: 1.5rem; background-color: #7B98AF; border-radius: 100vh; padding: 0.8rem 0.6rem"></i>
                    Threads & Discussions
                </h1>
                <h3 class="d-xl-none">
                    <i class="fa-regular fa-comments text-white" style="font-size: 1rem; background-color: #7B98AF; border-radius: 100vh; padding: 0.6rem 0.4rem"></i>
                    Threads & Discussions
                </h3>
                <div class="ms-lg-auto d-flex gap-3 flex-column flex-lg-row align-items-center">
                    @if (Model.CurrentUser != null)
                    {
                        <form asp-area="" asp-page="/Submit">
                            <button class="btn-lg btn-primary d-none d-xxl-block" type="submit"><i class="fa-solid fa-pen me-2"></i>Write New Post</button>
                            <button class="btn btn-primary d-xxl-none" type="submit"><i class="fa-solid fa-pen me-2"></i>Write New Post</button>
                        </form>
                    }
                    else
                    {
                        <form asp-area="Identity" asp-page="/Account/Login" asp-route-returnUrl="/Submit">
                            <button class="btn-lg btn-primary d-none d-xxl-block" type="submit"><i class="fa-solid fa-pen me-2"></i>Write New Post</button>
                            <button class="btn btn-primary d-xxl-none" type="submit"><i class="fa-solid fa-pen me-2"></i>Write New Post</button>
                        </form>
                    }
                    <div class="btn-group btn-group-lg d-none d-xxl-inline-flex">
                        <input type="radio" class="btn-check" id="btn-1" checked />
                        <label class="btn btn-outline-primary" for="btn1">Latest</label>

                        <input type="radio" class="btn-check" id="btn-2" disabled />
                        <label class="btn btn-outline-primary" for="btn1">Trending</label>

                        <input type="radio" class="btn-check" id="btn-3" disabled />
                        <label class="btn btn-outline-primary" for="btn1">Popular</label>

                        <input type="radio" class="btn-check" id="btn-4" disabled />
                        <label class="btn btn-outline-primary" for="btn1">More <i class="fa-solid fa-angle-down"></i></label>
                    </div>
                    <div class="btn-group btn-group d-xxl-none">
                        <input type="radio" class="btn-check" id="btn-1" checked />
                        <label class="btn btn-outline-primary" for="btn1">Latest</label>

                        <input type="radio" class="btn-check d-none d-sm-inline-block" id="btn-2" disabled />
                        <label class="btn btn-outline-primary d-none d-sm-inline-block" for="btn1">Trending</label>

                        <input type="radio" class="btn-check d-none d-xl-inline-block" id="btn-3" disabled />
                        <label class="btn btn-outline-primary d-none d-xl-inline-block" for="btn1">Popular</label>

                        <input type="radio" class="btn-check" id="btn-4" disabled />
                        <label class="btn btn-outline-primary" for="btn1">More <i class="fa-solid fa-angle-down"></i></label>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row width mx-auto my-3">
        <div class="col-9 p-0 mx-0 mx-md-auto flex-fill">
            @(await Html.RenderComponentAsync<PostLoader>(RenderMode.ServerPrerendered))
        </div>
        <div class="col-3 pe-0 d-none d-lg-block">
            <div class="d-flex flex-column gap-2 bg-white p-4">
                <h3 class="m-0 p-0"><i class="fa-solid fa-fire" style="color: firebrick;"></i> Trending Topics</h3>
                <a href="#" class="fs-5 fw-bold text-decoration-none disabled nav-link p-0">#1<span class="fw-normal ms-3">Counter Strike 2</span></a>
                <a href="#" class="fs-5 fw-bold text-decoration-none disabled nav-link p-0">#2<span class="fw-normal ms-3">Star Wars</span></a>
                <a href="#" class="fs-5 fw-bold text-decoration-none disabled nav-link p-0">#3<span class="fw-normal ms-3">The Mandalorian</span></a>
                <a href="#" class="fs-5 fw-bold text-decoration-none disabled nav-link p-0">#4<span class="fw-normal ms-3">The Bad Batch</span></a>
                <a href="#" class="fs-5 fw-bold text-decoration-none disabled nav-link p-0">#5<span class="fw-normal ms-3">World News</span></a>
            </div>
        </div>
    </div>
</div>

<script src="_framework/blazor.server.js"></script>
<script src="~/js/bootstrapInterop.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}